                                </div>

            </div>
        </header>

        <!-- Search bar -->
        <div class="search-wrapper">
            <div class="container container--add">
                <form id='search-form' method="POST" class="search" action="/list">
                    <input type="text" class="search__field" placeholder="Search" name="ser">
                    <select name="val" id="search-sort" class="search__sort" tabindex="0">
                        <option value="1" selected='selected'>Title</option>
                        <option value="2">Year</option>
                        <option value="3">Director</option>
                        <option value="4">Genre</option>
                    </select>
                    <button type='submit' class="btn btn-md btn--danger search__button">search a movie</button>
                </form>
            </div>
        </div>

        <!-- Main content -->
        <section class="container">
            <div class="col-sm-12">
                <h2 class="page-heading">Movies</h2>



                <!-- Movie preview item -->
                {{#each movie}}

                <div class="movie movie--preview movie--full release">
                     <div class="col-sm-3 col-md-2 col-lg-2">
                            <div class="movie__images">
                                <img alt='' src="{{this.cover}}">
                            </div>
                            <div class="movie__feature">
                                <a href="#" class="movie__feature-item movie__feature--comment">{{this.comments.length}}</a>
                                <a href="#" class="movie__feature-item movie__feature--video">{{this.trailers.length}}</a>
                                <a href="#" class="movie__feature-item movie__feature--photo">{{this.images.length}}</a>
                            </div>
                    </div>

                    <div class="col-sm-7 col-md-9">
                            <a href='/{{this.name}}' class="movie__title link--huge">{{this.title}}</a>

                            <p class="movie__time">{{this.duration}}</p>

                            <p class="movie__option"><strong>Country: </strong><a href="#">{{this.country}}</a></p>
                            <p class="movie__option"><strong>Category: </strong><a href="#">{{this.genre}}</a></p>
                            <p class="movie__option"><strong>Release date: </strong>{{this.reldate}}</p>
                            <p class="movie__option"><strong>Director: </strong><a href="#">{{this.director}}</a></p>
                            <p class="movie__option"><strong>Actors: </strong>
                                {{#each this.cast}}
                                <a href="#">{{this}}</a>
                                {{/each}}
                            </p>
                            <p class="movie__option"><strong>Age restriction: </strong><a href="#">{{this.ageres}}</a></p>
                            <form action="" method="POST">


                            <div class="movie__btns">
                                <input type='submit' class="btn btn-md btn--warning btn--sign login-window" value = "book a ticket for this movie">
                                <button href="#" class="watchlist">Add to watchlist</a>
                            </div>
                        </form>
                            <div class="preview-footer">
                                <div class="movie__rate"><div class="score"></div><span class="movie__rate-number">170 votes</span> <span class="movie__rating">5.0</span></div>


                            </div>
                    </div>

                    <div class="clearfix"></div>

    <!-- open/close -->
        <div class="overlay overlay-hugeinc">

            <section class="container">

                <div class="col-sm-4 col-sm-offset-4">
                    <button type="button" class="overlay-close">Close</button>

                    <form id="{{this.name}}" class="login" method='POST' novalidate='' action= '/booking'>
                        <p class="login__title">Enter date and city<br><span class="login-edition">welcome to A.Movie</span></p>


                        <div class="field-wrap">
                        <input type='text' placeholder='date' name='moviedate' class="login__input" required>
                        <input type='text' placeholder='city' name='moviecity' class="login__input" required>
                        <input type="text" class="login__input" name="movie" value="About Time" readonly>
                         </div>

                        <div class="login__control">
                            <button type='submit' class="btn btn-md btn--warning btn--wider">Next</button>
                        </div>
                    </form>
                </div>

            </section>
